{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@storm-software/tsconfig/core.json",
  "display": "Storm Software - Storm Stack",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@storm-stack/biome": ["packages/biome/src/index.ts"],
      "@storm-stack/biome/*": ["packages/biome/src/*"],
      "@storm-stack/core": ["packages/core/src/index.ts"],
      "@storm-stack/core/*": ["packages/core/src/*"],
      "@storm-stack/examples-cli-app": ["examples/cli-app/src/index.ts"],
      "@storm-stack/examples-cli-app/*": ["examples/cli-app/src/*"],
      "@storm-stack/examples-cloudflare-worker": [
        "examples/cloudflare-worker/src/index.ts"
      ],
      "@storm-stack/examples-cloudflare-worker/*": [
        "examples/cloudflare-worker/src/*"
      ],
      "@storm-stack/examples-node-app": ["examples/node-app/src/index.ts"],
      "@storm-stack/examples-node-app/*": ["examples/node-app/src/*"],
      "@storm-stack/log-console": ["packages/log-console/src/index.ts"],
      "@storm-stack/log-console/*": ["packages/log-console/src/*"],
      "@storm-stack/log-otel": ["packages/log-otel/src/index.ts"],
      "@storm-stack/log-otel/*": ["packages/log-otel/src/*"],
      "@storm-stack/log-sentry": ["packages/log-sentry/src/index.ts"],
      "@storm-stack/log-sentry/*": ["packages/log-sentry/src/*"],
      "@storm-stack/log-storage": ["packages/log-storage/src/index.ts"],
      "@storm-stack/log-storage/*": ["packages/log-storage/src/*"],
      "@storm-stack/log-stream": ["packages/log-stream/src/index.ts"],
      "@storm-stack/log-stream/*": ["packages/log-stream/src/*"],
      "@storm-stack/nx": ["packages/nx/index.ts"],
      "@storm-stack/nx/*": ["packages/nx/src/*"],
      "@storm-stack/plugin-http": ["packages/plugin-http/src/index.ts"],
      "@storm-stack/plugin-http/*": ["packages/plugin-http/src/*"],
      "@storm-stack/plugin-node": ["packages/plugin-node/src/index.ts"],
      "@storm-stack/plugin-node/*": ["packages/plugin-node/src/*"],
      "@storm-stack/preset-cli": ["packages/preset-cli/src/index.ts"],
      "@storm-stack/preset-cli/*": ["packages/preset-cli/src/*"],
      "@storm-stack/preset-cloudflare-worker": [
        "packages/preset-cloudflare-worker/src/index.ts"
      ],
      "@storm-stack/preset-cloudflare-worker/*": [
        "packages/preset-cloudflare-worker/src/*"
      ],
      "@storm-stack/tools-config/*": ["tools/config/*"],
      "@storm-stack/tools-nx": ["tools/nx/src/index.ts"],
      "@storm-stack/tools-nx/*": ["tools/nx/src/*"],
      "@storm-stack/tools-scripts": ["tools/scripts/src/index.ts"],
      "@storm-stack/tools-scripts/*": ["tools/scripts/src/*"],
      "@storm-stack/typedoc": ["packages/typedoc/src/index.ts"],
      "@storm-stack/typedoc/*": ["packages/typedoc/src/*"],
      "@storm-stack/types": ["packages/types/src/index.ts"],
      "@storm-stack/types/*": ["packages/types/src/*"],
      "eslint-config-storm-stack": [
        "packages/eslint-config-storm-stack/src/index.ts"
      ],
      "eslint-config-storm-stack/*": [
        "packages/eslint-config-storm-stack/src/*"
      ],
      "eslint-plugin-storm-stack": [
        "packages/eslint-plugin-storm-stack/src/index.ts"
      ],
      "eslint-plugin-storm-stack/*": [
        "packages/eslint-plugin-storm-stack/src/*"
      ]
    },
    "verbatimModuleSyntax": false
  }
}
