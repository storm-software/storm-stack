{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@storm-software/linting-tools/tsconfig/tsconfig.root.json",
  "display": "Storm Software - Storm Stack",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@storm-software/unique-identifier": [
        "packages/unique-identifier/src/index.ts"
      ],
      "@storm-software/unique-identifier/*": [
        "packages/unique-identifier/src/*"
      ],
      "@storm-software/utilities": ["packages/utilities/src/index.ts"],
      "@storm-software/utilities/*": ["packages/utilities/src/*"]
    }
  },
  "references": []
}
