    "build-base": {
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsup --config='tsup.config.ts'",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-base"],
      "options": {
        "commands": [
          "pnpm copyfiles LICENSE dist/apps/nx",
          "pnpm copyfiles --up=2 ./apps/nx/README.md ./apps/nx/package.json dist/apps/nx",
          "pnpm copyfiles --up=3 ./apps/nx/dist/* dist/apps/nx/dist"
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
