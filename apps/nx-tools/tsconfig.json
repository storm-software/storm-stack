{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "types": ["node"],
    "lib": ["esnext", "dom"]
  },
  "include": ["**/*.ts", "**/*.js", "**/*.json"],
  "exclude": [
    "jest.config.ts",
    "generators/**/files/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
