{
  "name": "@storm-stack/examples-cli-app",
  "version": "0.0.1",
  "type": "module",
  "description": "An example Storm Stack commandline application",
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/storm-stack.git",
    "directory": "examples/cli-app"
  },
  "private": true,
  "bin": {
    "examples-cli": "dist/examples-cli.mjs"
  },
  "dependencies": {
    "@storm-stack/types": "workspace:*",
    "@stryke/cli": "catalog:",
    "@stryke/url": "catalog:",
    "date-fns": "catalog:",
    "unstorage": "catalog:"
  },
  "devDependencies": {
    "@storm-stack/core": "workspace:*",
    "@storm-stack/nx": "workspace:*",
    "@storm-stack/plugin-cli": "workspace:*",
    "@storm-stack/plugin-date": "workspace:*",
    "@storm-stack/plugin-log-console": "workspace:*",
    "@storm-stack/plugin-log-sentry": "workspace:*"
  },
  "storm": {
    "plugins": [
      [
        "@storm-stack/plugin-date",
        {
          "type": "date-fns"
        }
      ],
      [
        "@storm-stack/plugin-cli",
        {
          "bin": "examples-cli",
          "dotenv": {
            "types": {
              "config": "./src/types.ts#StormCLIAppConfig"
            }
          }
        }
      ],
      [
        "@storm-stack/plugin-log-sentry",
        {
          "logLevel": "error"
        }
      ]
    ],
    "skipCache": true,
    "skipInstalls": true,
    "output": {
      "outputMode": "fs"
    }
  }
}
