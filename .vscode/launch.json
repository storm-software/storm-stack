{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Prepare",
      "request": "launch"
    },
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Attach to Language Server",
      "type": "node",
      "port": 6009,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/node_modules/@acidic/language/**/*.js"]
    }
  ]
}
