{
  "name": "@storm-stack/cli",
  "version": "0.0.1",
  "type": "module",
  "description": "The command-line interface application for managing Storm Stack projects.",
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/storm-stack.git",
    "directory": "packages/cli"
  },
  "private": false,
  "bin": {
    "storm-stack": "dist/storm-stack.js"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./index": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "storm-stack",
    "storm-software"
  ],
  "dependencies": {
    "@storm-software/config-tools": "catalog:",
    "@storm-stack/core": "workspace:*",
    "@stryke/env": "catalog:",
    "@stryke/fs": "catalog:",
    "@stryke/http": "catalog:",
    "@stryke/json": "catalog:",
    "@stryke/path": "catalog:",
    "@stryke/type-checks": "catalog:",
    "@stryke/url": "catalog:",
    "unctx": "catalog:",
    "unstorage": "catalog:"
  },
  "devDependencies": {
    "@storm-stack/nx": "workspace:*",
    "@storm-stack/plugin-log-sentry": "workspace:*",
    "@storm-stack/plugin-log-storage": "workspace:*",
    "@storm-stack/preset-cli": "workspace:*",
    "@storm-stack/types": "workspace:*",
    "@stryke/types": "catalog:",
    "@types/node": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  },
  "storm": {
    "name": "Storm Stack CLI",
    "plugins": [
      "@storm-stack/plugin-log-storage",
      "@storm-stack/plugin-log-sentry"
    ],
    "presets": [
      [
        "@storm-stack/preset-cli",
        {
          "bin": "storm-stack"
        }
      ]
    ],
    "skipCache": true
  }
}
