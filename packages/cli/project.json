{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/cli/src",
  "targets": {
    "clean": {
      "executor": "@storm-stack/nx:clean",
      "options": {
        "outputPath": "dist/packages/cli"
      }
    },
    "prepare": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{projectRoot}/.storm"],
      "executor": "@storm-stack/nx:prepare",
      "defaultConfiguration": "production",
      "options": {
        "entry": "{sourceRoot}/commands"
      },
      "configurations": {
        "production": {
          "mode": "production"
        },
        "staging": {
          "mode": "staging"
        },
        "development": {
          "mode": "development",
          "skipCache": true
        }
      }
    },
    "build": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{options.outputPath}"],
      "executor": "@storm-stack/nx:build",
      "dependsOn": ["prepare"],
      "defaultConfiguration": "production",
      "options": {
        "entry": "{sourceRoot}/commands",
        "outputPath": "dist/packages/cli"
      },
      "configurations": {
        "production": {
          "mode": "production"
        },
        "staging": {
          "mode": "staging"
        },
        "development": {
          "mode": "development",
          "skipCache": true
        }
      }
    },
    "docs-vhs": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare", "build"],
      "options": {
        "command": "vhs packages/cli/docs/storm-demo.tape --output packages/cli/docs/storm-demo.gif"
      }
    },
    "docs": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{projectRoot}/docs"],
      "executor": "@storm-stack/nx:docs",
      "dependsOn": ["prepare", "build"],
      "defaultConfiguration": "production",
      "options": {
        "entry": "{sourceRoot}/commands",
        "outputPath": "dist/packages/cli"
      },
      "configurations": {
        "production": {
          "mode": "production"
        },
        "staging": {
          "mode": "staging"
        },
        "development": {
          "mode": "development",
          "skipCache": true
        }
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  },
  "implicitDependencies": ["nx"]
}
