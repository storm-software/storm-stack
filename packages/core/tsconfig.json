{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "rootDir": "../..",
    "types": ["node"],
    "strict": true,
    "outDir": "../../dist/out-tsc"
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "tsup.config.ts",
    "tsup.schemas.ts"
