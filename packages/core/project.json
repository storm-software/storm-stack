{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/core/src",
  "targets": {
    "generate-schemas": {
      "cache": true,
      "inputs": ["{projectRoot}/schemas/*.capnp"],
      "outputs": ["{projectRoot}/schemas/*.ts"],
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "commands": [
          "pnpm exec storm-capnpc --project-root packages/core --schema ./{projectRoot}/schemas"
        ],
        "parallel": false
      }
    },
    "generate-runtime-types": {
      "cache": true,
      "inputs": ["{workspaceRoot}/packages/types/dist"],
      "outputs": ["{projectRoot}/dist/runtime-types"],
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "commands": [
          "pnpm copyfiles --up=5 \"./packages/types/dist/cjs/src/**/*.js\" \"./packages/types/dist/cjs/src/**/*.ts\" packages/core/dist/runtime-types/cjs",
          "pnpm copyfiles --up=5 \"./packages/types/dist/esm/src/**/*.js\" \"./packages/types/dist/esm/src/**/*.ts\" packages/core/dist/runtime-types/esm"
        ],
        "parallel": true
      }
    },
    "build-schemas": {
      "cache": true,
      "inputs": ["{projectRoot}/schemas/*.ts"],
      "outputs": ["{projectRoot}/dist/schemas"],
      "executor": "nx:run-commands",
      "dependsOn": ["generate-schemas"],
      "options": {
        "command": "tsup --config=tsup.schemas.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build-base": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{projectRoot}/dist"],
      "executor": "nx:run-commands",
      "dependsOn": ["generate-runtime-types"],
      "options": {
        "command": "tsup --config=tsup.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build-scripts": {
      "cache": false,
      "inputs": ["{projectRoot}/scripts"],
      "outputs": ["{projectRoot}/bin"],
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --config=tsup.scripts.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build-runtime-types": {
      "cache": true,
      "inputs": [
        "{projectRoot}/dist/runtime-types/esm",
        "{projectRoot}/dist/runtime-types/cjs"
      ],
      "outputs": [
        "{projectRoot}/dist/runtime-types/shared.d.ts",
        "{projectRoot}/dist/runtime-types/node.d.ts",
        "{projectRoot}/dist/runtime-types/browser.d.ts"
      ],
      "executor": "nx:run-commands",
      "dependsOn": ["generate-runtime-types", "build-scripts"],
      "options": {
        "command": "node ./scripts/build-runtime-types.cjs || exit 0",
        "cwd": "{projectRoot}"
      }
    },
    "build-babel-types": {
      "cache": true,
      "inputs": ["{projectRoot}/types/babel-types.d.ts"],
      "outputs": ["{projectRoot}/dist/babel-types.d.ts"],
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm copyfiles --up=3 ./packages/core/types/babel-types.d.ts packages/core/dist"
      }
    },
    "build": {
      "cache": true,
      "inputs": ["{projectRoot}/dist"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "executor": "nx:run-commands",
      "dependsOn": [
        "build-base",
        "build-scripts",
        "build-schemas",
        "build-runtime-types",
        "build-babel-types"
      ],
      "options": {
        "commands": [
          "pnpm copyfiles LICENSE dist/packages/core",
          "pnpm copyfiles --up=2 ./packages/core/*.md ./packages/core/package.json dist/packages/core",
          "pnpm copyfiles --up=4 \"./packages/core/src/new/files/**/*\" dist/packages/core/files",
          "pnpm copyfiles --up=3 \"./packages/core/dist/*.js\" \"./packages/core/dist/*.d.ts\" \"./packages/core/dist/*.cjs\" \"./packages/core/dist/*.d.cts\" dist/packages/core/dist",
          "pnpm copyfiles --up=3 \"./packages/core/dist/base/**/*\" dist/packages/core/dist",
          "pnpm copyfiles --up=3 \"./packages/core/dist/commands/**/*\" dist/packages/core/dist",
          "pnpm copyfiles --up=3 \"./packages/core/dist/deepkit/**/*\" dist/packages/core/dist",
          "pnpm copyfiles --up=3 \"./packages/core/dist/lib/**/*\" dist/packages/core/dist",
          "pnpm copyfiles --up=3 \"./packages/core/dist/runtime-types/**/*\" dist/packages/core/dist",
          "pnpm copyfiles --up=3 \"./packages/core/dist/types/**/*\" dist/packages/core/dist",
          "pnpm copyfiles --up=3 \"./packages/core/dist/unplugin/**/*\" dist/packages/core/dist",
          "pnpm copyfiles --up=3 \"./packages/core/schemas/*.js\" \"./packages/core/schemas/*.d.ts\" \"./packages/core/schemas/*.cjs\" \"./packages/core/schemas/*.d.cts\" \"./packages/core/schemas/*.capnp\" dist/packages/core/schemas",
          "pnpm copyfiles --up=3 \"./packages/core/scripts/*.cjs\" \"./packages/core/scripts/*.js\" dist/packages/core/scripts"
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  },
  "tags": ["platform:node"],
  "implicitDependencies": ["types"]
}
