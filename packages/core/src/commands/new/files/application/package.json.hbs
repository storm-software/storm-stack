{
  "name": "{{ options.packageName }}",
  "version": "0.0.1",
  "type": "module",
  "description": "{{ options.description }}",
  "repository": {
    "type": "github",
    "url": "{{ workspaceConfig.repository }}",
    "directory": "{{ options.projectRoot }}"
  },
  "private": false,
  "keywords": [
    "storm-stack"
  ],
  "dependencies": {
    "@storm-stack/core": "workspace:*"
  },
  "devDependencies": {
    "@stryke/types": "catalog:"
  },
  "storm": {
    "name": "{{ options.name }}",
    "projectType": "application"
  },
  "publishConfig": {
    "access": "public"
  }
}
