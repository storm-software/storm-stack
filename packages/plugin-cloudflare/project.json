{
  "name": "plugin-cloudflare",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/plugin-cloudflare/src",
  "targets": {
    "build-base": {
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsup-node --config=tsup.config.ts",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-base"],
      "options": {
        "commands": [
          "pnpm copyfiles LICENSE dist/packages/plugin-cloudflare",
          "pnpm copyfiles --up=2 ./packages/plugin-cloudflare/*.md ./packages/plugin-cloudflare/package.json dist/packages/plugin-cloudflare",
          "pnpm copyfiles --up=3 \"./packages/plugin-cloudflare/dist/**/*\" dist/packages/plugin-cloudflare/dist"
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
