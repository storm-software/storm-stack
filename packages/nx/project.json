{
  "name": "nx",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx/src",
  "projectType": "library",
  "targets": {
    "build-untyped": {
      "cache": true,
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "inputs": [
        "{projectRoot}/src/**/untyped.ts",
        "{projectRoot}/src/**/*.untyped.ts"
      ],
      "outputs": [
        "{projectRoot}/src/**/schema.d.ts",
        "{projectRoot}/src/**/*.schema.d.ts",
        "{projectRoot}/src/**/schema.md",
        "{projectRoot}/src/**/*.schema.md",
        "{projectRoot}/src/**/schema.json",
        "{projectRoot}/src/**/*.schema.json"
      ],
      "options": {
        "commands": [
          "storm-untyped generate --entry=\"packages/nx/src/**/{untyped.ts,*.untyped.ts}\""
        ]
      }
    },
    "build": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{projectRoot}/dist", "{workspaceRoot}/dist/packages/nx"],
      "executor": "nx:run-commands",
      "dependsOn": ["build-base", "build-untyped", "type-check"],
      "options": {
        "commands": [
          "pnpm copyfiles LICENSE dist/packages/nx",
          "pnpm copyfiles --up=2 packages/nx/*.md packages/nx/executors.json packages/nx/generators.json packages/nx/package.json dist/packages/nx",
          "pnpm copyfiles --up=3 packages/nx/src/executors/*/schema.json packages/nx/src/executors/*/schema.d.ts packages/nx/src/generators/*/schema.json packages/nx/src/generators/*/schema.d.ts packages/nx/dist/src",
          "pnpm copyfiles --up=3 packages/nx/src/base/*.schema.json packages/nx/src/base/*.schema.d.ts dist/packages/nx/dist/src",
          "pnpm copyfiles --up=3 \"packages/nx/dist/**/*\" dist/packages/nx/dist",
          "pnpm copyfiles --up=4 \"packages/nx/src/**/*.md\" dist/packages/nx/docs/api"
        ]
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  }
}
