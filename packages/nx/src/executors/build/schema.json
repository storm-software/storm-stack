{
  "id": "#",
  "title": "Storm Stack Build Executor",
  "description": "A type definition for the Storm Stack - Build executor schema",
  "required": [],
  "properties": {
    "outputPath": {
      "title": "Output Path",
      "type": "string",
      "format": "path",
      "description": "The output path for the build",
      "id": "#outputPath",
      "default": "dist/{projectRoot}"
    },
    "entry": {
      "title": "Entry File",
      "type": "string",
      "format": "path",
      "description": "The entry file or files to build",
      "id": "#entry",
      "default": "{sourceRoot}/index.ts"
    },
    "presets": {
      "title": "Presets",
      "type": "array",
      "description": "A list of presets to use during Storm Stack processing",
      "items": {
        "type": "string"
      },
      "id": "#presets",
      "default": []
    },
    "plugins": {
      "title": "Plugins",
      "type": "array",
      "description": "A list of plugins to use during Storm Stack processing",
      "items": {
        "type": "string"
      },
      "id": "#plugins",
      "default": []
    },
    "mode": {
      "title": "Mode",
      "type": "string",
      "description": "The build mode",
      "enum": ["development", "staging", "production"],
      "id": "#mode",
      "default": "production"
    },
    "tsconfig": {
      "title": "TypeScript Configuration File",
      "type": "string",
      "format": "path",
      "description": "The path to the tsconfig file",
      "id": "#tsconfig",
      "default": "{projectRoot}/tsconfig.json"
    },
    "skipInstalls": {
      "title": "Skip Installs",
      "type": "boolean",
      "description": "Skip installing dependencies during prepare stage",
      "id": "#skipInstalls"
    },
    "skipCache": {
      "title": "Skip Cache",
      "type": "boolean",
      "description": "Skip the cache when building",
      "id": "#skipCache"
    },
    "skipLint": {
      "title": "Skip Lint",
      "type": "boolean",
      "description": "Skip linting the project when building",
      "id": "#skipLint"
    },
    "silent": {
      "title": "Silent",
      "type": "boolean",
      "description": "Should the build run silently - only report errors back to the user",
      "id": "#silent",
      "default": false
    },
    "autoPrepare": {
      "title": "Auto Prepare",
      "type": "boolean",
      "description": "Automatically prepare the project (if required)",
      "id": "#autoPrepare",
      "default": true
    },
    "autoClean": {
      "title": "Auto Clean",
      "type": "boolean",
      "description": "Automatically clean the project (if required)",
      "id": "#autoClean",
      "default": true
    }
  },
  "type": "object",
  "default": {
    "outputPath": "dist/{projectRoot}",
    "entry": "{sourceRoot}/index.ts",
    "presets": [],
    "plugins": [],
    "mode": "production",
    "tsconfig": "{projectRoot}/tsconfig.json",
    "silent": false,
    "autoPrepare": true,
    "autoClean": true
  }
}
