{
  "$schema": "http://json-schema.org/schema",
  "extends": "../ts-build/schema.json",
  "$id": "ts-server-build",
  "version": 2,
  "title": "TypeScript Server Build",
  "description": "Run the build process for a TypeScript server-side package",
  "type": "object",
  "properties": {
    "platform": {
      "type": "string",
      "description": "Platform target for outputs.",
      "enum": ["browser", "neutral", "node", "worker"],
      "default": "node"
    }
  },
  "required": ["platform"]
}
