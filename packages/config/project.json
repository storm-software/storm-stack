{
  "name": "config",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "root": "packages/config",
  "sourceRoot": "packages/config/src",
  "targets": {
    "build": {
      "executor": "@storm-software/workspace-tools:tsup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/config",
        "tsConfig": "packages/config/tsconfig.json",
        "project": "packages/config/package.json",
        "defaultConfiguration": "production",
        "platform": "node",
        "external": [
          "valibot",
          "ow",
          "fp-ts/Either",
          "@effect/schema",
          "@effect/data",
          "@deepkit/type"
        ],
        "assets": [
          {
            "glob": "packages/config",
            "input": "schema.json",
            "output": "."
          }
        ]
      },
      "configurations": {
        "production": {
          "debug": false
        },
        "development": {
          "debug": true
        }
      }
    },
    "lint": {},
    "test": {}
  }
}
