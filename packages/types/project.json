{
  "name": "types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/types/src",
  "targets": {
    "build-cjs": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{options.outputPath}"],
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/types/src/index.ts",
        "additionalEntryPoints": [
          "packages/types/src/shared/index.ts",
          "packages/types/src/shared/config.ts",
          "packages/types/src/shared/context.ts",
          "packages/types/src/shared/date.ts",
          "packages/types/src/shared/env.ts",
          "packages/types/src/shared/error.ts",
          "packages/types/src/shared/log.ts",
          "packages/types/src/shared/storage.ts",
          "packages/types/src/shared/message.ts",
          "packages/types/src/node/index.ts",
          "packages/types/src/node/event.ts",
          "packages/types/src/node/env.ts",
          "packages/types/src/node/response.ts",
          "packages/types/src/node/request.ts",
          "packages/types/src/node/app.ts",
          "packages/types/src/browser/index.ts",
          "packages/types/src/browser/response.ts",
          "packages/types/src/browser/request.ts"
        ],
        "outputPath": "packages/types/dist/cjs",
        "tsConfig": "packages/types/tsconfig.cjs.json",
        "generatePackageJson": false,
        "clean": false
      }
    },
    "build-esm": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{options.outputPath}"],
      "executor": "@nx/js:tsc",
      "options": {
        "main": "packages/types/src/index.ts",
        "additionalEntryPoints": [
          "packages/types/src/shared/index.ts",
          "packages/types/src/shared/config.ts",
          "packages/types/src/shared/context.ts",
          "packages/types/src/shared/date.ts",
          "packages/types/src/shared/env.ts",
          "packages/types/src/shared/error.ts",
          "packages/types/src/shared/log.ts",
          "packages/types/src/shared/storage.ts",
          "packages/types/src/shared/message.ts",
          "packages/types/src/node/index.ts",
          "packages/types/src/node/event.ts",
          "packages/types/src/node/env.ts",
          "packages/types/src/node/response.ts",
          "packages/types/src/node/request.ts",
          "packages/types/src/node/app.ts",
          "packages/types/src/browser/index.ts",
          "packages/types/src/browser/response.ts",
          "packages/types/src/browser/request.ts"
        ],
        "outputPath": "packages/types/dist/esm",
        "tsConfig": "packages/types/tsconfig.esm.json",
        "generatePackageJson": false,
        "clean": false
      }
    },
    "build": {
      "cache": true,
      "inputs": ["typescript", "^production"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rm -rf ./packages/types/dist",
          "rm -rf ./dist/packages/types",
          "mkdir -p ./packages/types/dist",
          "mkdir -p ./packages/types/dist/cjs",
          "mkdir -p ./packages/types/dist/esm",
          "echo '{\"type\": \"commonjs\"}' > ./packages/types/dist/cjs/package.json",
          "echo '{\"type\": \"module\"}' > ./packages/types/dist/esm/package.json",
          "pnpm nx run types:build-cjs",
          "pnpm nx run types:build-esm",
          "pnpm copyfiles LICENSE dist/packages/types",
          "pnpm copyfiles --up=2 ./packages/types/*.md ./packages/types/package.json dist/packages/types",
          "pnpm copyfiles --up=2 \"./packages/types/dist/**/*\" dist/packages/types"
        ],
        "parallel": false
      }
    },
    "nx-release-publish": {
      "executor": "@storm-software/workspace-tools:npm-publish"
    }
  },
  "tags": ["platform:neutral"]
}
