{
  "name": "@storm-stack/log-sentry",
  "version": "0.3.2",
  "type": "module",
  "description": "A package containing a Storm Stack log adapter to write log messages to Sentry",
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/storm-stack.git",
    "directory": "packages/log-sentry"
  },
  "private": false,
  "peerDependencies": {
    "@sentry/node": "catalog:"
  },
  "peerDependenciesMeta": {
    "@sentry/node": {
      "optional": true
    }
  },
  "dependencies": {
    "@sentry/core": "catalog:",
    "@stryke/json": "catalog:"
  },
  "devDependencies": {
    "@storm-stack/core": "0.4.2",
    "@storm-stack/nx": "0.3.2",
    "@types/node": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  },
  "storm": {
    "adapter": "log",
    "dotenv": {
      "types": {
        "variables": "./src/types.ts#StormSentryLogEnv"
      }
    }
  }
}
