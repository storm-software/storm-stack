    "build-base": {
      "executor": "nx:run-commands",
      "dependsOn": ["clean", "^build"],
      "options": {
        "command": "tsup --config=\"tsup.config.ts\"",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-base"],
      "options": {
        "commands": [
          "pnpm copyfiles LICENSE dist/packages/build",
          "pnpm copyfiles --up=2 ./packages/build/README.md ./packages/build/package.json dist/packages/build",
          "pnpm copyfiles --up=3 ./packages/build/dist/* dist/packages/build/dist"
        ]
      }
    }
  },
  "tags": ["platform:node"]
}
