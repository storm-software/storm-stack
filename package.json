    "@swc/cli": "0.1.65",
    "@swc/core": "1.3.107",
    "@swc/helpers": "0.5.6",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.5.12",
    "@types/node": "^20.11.20",
