{
  "name": "@storm-stack/monorepo",
  "version": "0.5.3",
  "description": "âš¡ The storm-stack monorepo contains utility applications, tools, and various libraries to create modern and scalable web applications.",
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/storm-stack.git"
  },
  "homepage": "https://stormsoftware.com",
  "bugs": {
    "url": "https://stormsoftware.com/support",
    "email": "support@stormsoftware.com"
  },
  "author": {
    "name": "Storm Software",
    "email": "contact@stormsoftware.com",
    "url": "https://stormsoftware.com"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/storm-software"
  },
  "license": "Apache License 2.0",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=20.4.0",
    "pnpm": ">=9.6.0"
  },
  "keywords": [
    "storm-stack",
    "storm-software",
    "storm",
    "stormstack",
    "storm-ops",
    "acidic",
    "acidic-lang",
    "acidic-model",
    "cyclone-ui",
    "nextjs",
    "prisma",
    "graphql",
    "sullivanpj",
    "monorepo"
  ],
  "scripts": {
    "adr": "pnpm log4brains adr new",
    "adr-preview": "pnpm log4brains preview",
    "api-extractor": "pnpm storm-docs api-extractor --outputPath=\"docs/api-reference\" --clean",
    "build-all": "nx affected -t build --parallel=5 --nxBail --exclude=\"@storm-stack/monorepo,web-docs,nx-tools\"",
    "build-apps": "nx run-many -t build --projects=apps/* --parallel=5",
    "build-components": "nx run-many -t build --projects=components/* --parallel=5",
    "build-docs": "nx run-many -t build --projects=docs/* --parallel=5",
    "build-libs": "nx run-many -t build --projects=libs/* --parallel=5",
    "build-prod": "nx run-many -t build --all --prod --parallel=5",
    "build-tools": "nx run-many -t build --projects=tools/* --parallel=5",
    "clean": "pnpm exec rimraf dist",
    "clean-apps": "pnpm exec rimraf dist/apps",
    "clean-components": "pnpm exec rimraf dist/components",
    "clean-docs": "pnpm exec rimraf dist/docs",
    "clean-libs": "pnpm exec rimraf dist/libs",
    "clean-storybook": "pnpm exec rimraf dist/storybook",
    "clean-tools": "pnpm exec rimraf dist/tools",
    "commit": "pnpm storm-git commit",
    "dep-graph": "nx dep-graph",
    "e2e": "nx e2e",
    "format": "nx format:write",
    "graph": "nx graph",
    "help": "nx help",
    "install-csb": "corepack enable && pnpm install --no-frozen-lockfile",
    "lint": "pnpm storm-lint all --skip-cspell",
    "local-registry": "nx local-registry @storm-stack/monorepo",
    "nuke": "pnpm nuke-cache && pnpm nuke-node_modules",
    "nuke-cache": "pnpm exec rimraf --no-interactive -- ./dist ./tmp ./pnpm-lock.yaml ./.tamagui",
    "nuke-node_modules": "pnpm nuke-node_modules-apps && pnpm nuke-node_modules-packages && pnpm nuke-node_modules-tools && pnpm exec rimraf --no-interactive --glob ./node_modules",
    "nuke-node_modules-apps": "pnpm exec rimraf --no-interactive --glob ./apps/**/node_modules",
    "nuke-node_modules-packages": "pnpm exec rimraf --no-interactive --glob ./packages/**/node_modules",
    "nuke-node_modules-tools": "pnpm exec rimraf --no-interactive --glob ./tools/**/node_modules",
    "nx": "nx",
    "readme-gen": "pnpm storm-git readme-gen --templates=\"docs/readme-templates\"",
    "release": "pnpm storm-git release",
    "start": "nx serve"
  },
  "dependencies": {
    "@commitlint/cli": "^19.3.0",
    "@ls-lint/ls-lint": "^2.2.3",
    "@nderscore/tamagui-typescript-plugin": "^0.6.0",
    "@nx/cypress": "19.5.2",
    "@nx/devkit": "19.5.2",
    "@nx/eslint-plugin": "19.5.2",
    "@nx/jest": "19.5.2",
    "@nx/js": "19.5.2",
    "@nx/next": "19.5.2",
    "@nx/plugin": "19.5.2",
    "@nx/react": "19.5.2",
    "@nx/react-native": "19.5.2",
    "@nx/workspace": "19.5.2",
    "@storm-software/build-tools": "latest",
    "@storm-software/config": "latest",
    "@storm-software/eslint": "latest",
    "@storm-software/git-tools": "latest",
    "@storm-software/linting-tools": "latest",
    "@storm-software/prettier": "latest",
    "@storm-software/testing-tools": "latest",
    "@storm-software/tsconfig": "latest",
    "@storm-software/workspace-tools": "latest",
    "@swc-node/register": "1.9.2",
    "@swc/cli": "0.3.14",
    "@swc/core": "1.5.7",
    "@swc/helpers": "0.5.12",
    "@taplo/cli": "^0.7.0",
    "@testing-library/react": "15.0.6",
    "@tsconfig/recommended": "^1.0.3",
    "@types/jest": "29.5.12",
    "@types/node": "^20.11.20",
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc",
    "babel-jest": "^29.4.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "copyfiles": "^2.4.1",
    "cypress": "13.13.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-environment-node": "29.7.0",
    "lefthook": "^1.5.6",
    "log4brains": "1.0.1",
    "ls-lint": "^0.1.2",
    "make-dir-cli": "^3.1.0",
    "nx": "19.5.2",
    "prettier": "^3.3.0",
    "react": "19.0.0-rc-f6cce072-20240723",
    "react-dom": "19.0.0-rc-f6cce072-20240723",
    "react-native": "0.74.1",
    "rimraf": "^5.0.5",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "tslib": "^2.6.2",
    "typescript": "5.5.4",
    "verdaccio": "5.29.2"
  },
  "namespace": "@storm-stack",
  "nx": {
    "includedScripts": [
      "lint",
      "format"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/react": "npm:types-react@rc",
      "@types/react-dom": "npm:types-react-dom@rc",
      "ip": ">=1.1.8",
      "next": ">=13.4.20-canary.13",
      "debug": ">=4.3.1",
      "got": ">=11.8.5",
      "markdown-it": ">=12.3.2",
      "node-fetch": ">=2.6.7",
      "parse-path": ">=5.0.0",
      "parse-url": ">=8.1.0",
      "shell-quote": ">=1.7.3",
      "loader-utils": ">=1.4.2",
      "simple-git": ">=3.16.0",
      "nth-check": ">=2.0.1",
      "postcss": ">=8.4.31",
      "follow-redirects": ">=1.15.5",
      "@storm-stack/utilities": "workspace:*",
      "@storm-stack/unique-identifier": "workspace:*",
      "@storm-stack/date-time": "workspace:*",
      "@storm-stack/errors": "workspace:*",
      "@storm-stack/serialization": "workspace:*",
      "@storm-stack/logging": "workspace:*",
      "@storm-stack/file-system": "workspace:*",
      "@storm-stack/cli": "workspace:*",
      "@storm-stack/plugin-system": "workspace:*",
      "@storm-stack/telemetry": "workspace:*",
      "@storm-stack/nx-tools": "workspace:*",
      "@storm-stack/web-docs": "workspace:*",
      "@storm-stack/server-cache": "workspace:*",
      "@storm-stack/string-fns": "workspace:*",
      "@storm-stack/types": "workspace:*"
    }
  },
  "prettier": "@storm-software/prettier/config.json",
  "triggerEmptyDevReleaseByIncrementingThisNumber": 0
}
