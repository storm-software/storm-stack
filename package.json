  "scripts": {
    "adr:add": "pnpm log4brains adr new",
    "adr:preview": "pnpm log4brains preview",
    "prebuild": "pnpm clean",
    "build": "nx affected -t build --parallel=5",
    "build:all": "nx run-many -t build --all --parallel=3",
    "build:docs": "nx run-many -t build --projects=docs/* --parallel=5",
    "build:packages": "nx run-many -t build --projects=packages/* --parallel=5",
    "build:production": "nx run-many -t build --all --prod --parallel=5",
    "build:tools": "nx run-many -t build --projects=nx-tools --parallel=5",
    "clean": "rimraf dist",
    "clean:docs": "rimraf dist/docs",
    "clean:packages": "rimraf dist/packages",
    "clean:tools": "rimraf dist/tools",
    "commit": "npx storm-git commit",
    "dep-graph": "nx dep-graph",
    "e2e": "nx e2e",
    "format": "nx format:write",
    "graph": "nx graph",
    "help": "nx help",
    "install:csb": "corepack enable && pnpm install --frozen-lockfile",
    "biome:check": "biome check --apply-unsafe --no-errors-on-unmatched --files-ignore-unknown=true",
    "biome:lint": "npx biome lint --apply --no-errors-on-unmatched --files-ignore-unknown=true",
    "biome:format": "npx biome format --write  --no-errors-on-unmatched --files-ignore-unknown=true",
    "lint": "npx storm-lint all --skip-cspell --skip-alex --alex-config=\"@storm-software/linting-tools/alex/.alexrc\"",
    "local-registry": "nx local-registry @storm-stack/monorepo",
    "nx": "nx",
    "preinstall": "npx storm-pre-install || npx -y only-allow pnpm",
    "readme-gen": "npx storm-git readme-gen --templates=\"docs/readme-templates\"",
    "release": "npx storm-git release",
    "test": "echo Skipping all workspace testing..."
  },
  "prettier": "@storm-software/linting-tools/prettier/config.json",
  "dependencies": {
    "@biomejs/biome": "^1.5.1",
