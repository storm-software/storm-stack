    "jest-environment-node": "29.7.0",
    "knip": "5.33.1",
    "lefthook": "^1.7.18",
    "log4brains": "1.0.1",
    "ls-lint": "^0.1.2",
    "make-dir-cli": "^4.0.0",
    "nx": "^20.0.11",
    "prettier": "^3.3.3",
    "react": "19.0.0-rc-f6cce072-20240723",
    "react-dom": "19.0.0-rc-f6cce072-20240723",
    "react-native": "0.75.4",
