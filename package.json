  "keywords": [
    "storm-stack",
    "storm-software",
    "storm",
    "stormstack",
    "storm-ops",
    "acidic",
    "acidic-lang",
    "acidic-model",
    "impact",
    "nextjs",
    "prisma",
    "zenstack",
    "hasura",
    "strapi",
    "graphql",
    "sullivanpj",
    "monorepo"
  ],
  "homepage": "https://stormsoftware.org",
  "bugs": {
    "url": "https://stormsoftware.org/support",
    "email": "support@stormsoftware.org"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/storm-stack.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/storm-software"
  },
