{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "types": ["node"],
    "outDir": "dist"
  },
  "include": [
    "executors.ts",
    "generators.ts",
    "index.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.json",
    "tsup.config.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/generators/**/files/**/*",
    "src/**/untyped.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
